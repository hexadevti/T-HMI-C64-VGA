<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.retroelec.thmic64kb">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-permission-sdk-23 android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/thmic64kb"
        android:label="THMIC64KB"
        android:roundIcon="@mipmap/thmic64kb_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.THMIC64KB">
    <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KBJoystickActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".DivActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".KBInpActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StatusActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MemoryActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Pinball1Activity"
            android:screenOrientation="landscape" />
    </application>

</manifest>
